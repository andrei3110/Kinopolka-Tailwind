
  <%- include('../particles/header.ejs') %>
  <div class="min-h-screen max-w-screen-2xl mx-auto bg-[#dfdfdf]">
    <center>
      <div class="relative inline-block h-128 p-5 bg-gray-300 mt-32 mx-auto shadow-2xl shadow-gray-700/50">
        <div class="text-center text-gray-500 text-xl">
          <h1>Давайте изменим ваше имя!</h1>
        </div>

        <form  class="form__data"  action="/editName" method="post">
          <input type="hidden" value="<%= users.id %>">

          <div class="relative mb-11">
            <input class="text-5 block w-80 p-3 mt-12" type="text" required  name="currentName">
            <label class="text-lg text-gray-500">Текущее имя</label>
          </div>

          <div class="group">
            <input class="text-5 block w-80 p-3 mt-12" type="text" required name="lastName">
            <label class="text-lg text-gray-500">Новое имя</label>
          </div>

          <button class="relative w-3/4 mx-auto top-20 bg-gray-600 text-white inline-block shadow-2xl shadow-gray-700/80 p-3  hover:shadow-xl hover:-translate-y-1 hover:bg-gray-500 duration-700" type="submit" value="Изменить">Изменить</button>
          <div class="links">
            <a href="/editProfile" class="absolute bottom-5 text-blue-800 left-32">Изменить пароль</a>
            <a href="/editAvatar" class="absolute bottom-10 text-blue-800 left-32">Изменить аватар</a>
  
          </div>
        </form>
       
      </div>
    </center>

  </div>





