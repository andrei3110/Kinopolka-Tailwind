        <%- include('../particles/tags.ejs') %>

        <% if (category == 1 || category == 2) { %>    
            <div class="mt-24">
                <% for (let i=0; i < genres.length; i++) { %>

                    <a href="/from/movies/<%= genres[i].id %>" >
                        <div class="transition w-3/4 border-b-2 border-gray-300 relative  bg-white mx-auto hover:bg-[#dadada] duration-600 hover:scale-[102%]  duration-600 hover:shadow-2xl shadow-blue-800 hover:z-20" id="genres__object">
    
